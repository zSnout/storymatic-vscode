{
  "name": "storymatic",
  "displayName": "Storymatic",
  "description": "Storymatic language support with built-in compiling",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "storymatic",
        "aliases": [
          "Storymatic",
          "storymatic"
        ],
        "extensions": [
          ".sm",
          ".story",
          ".storymatic"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "storymatic",
        "scopeName": "source.storymatic",
        "path": "./syntaxes/storymatic.tmLanguage.json"
      }
    ]
  }
}
